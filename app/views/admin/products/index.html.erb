<h2> 產品列表 </h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>名稱</td>
      <td>描述</td>
      <td>數量</td>
      <td>單價</td>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
