<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to "新增產品", new_admin_product_path, class: "btn btn-primary btn-sm" %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>#</td>
      <td width="220">Product Pic</td>
      <td>Name</td>
      <td>Price</td>
      <td width="100">Options</td>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= render_product_photo(product, "thumb") %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Edit", edit_admin_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
