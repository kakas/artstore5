<h2> 使用者列表 </h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>權限</th>
      <th>功能</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <% if user.admin? %>
          <td>管理者</td>
          <td><%= link_to "轉為一般使用者", to_normal_admin_user_path(user), method: :post, class: "btn btn-info" %></td>
        <% else %>
          <td>一般使用者</td>
          <td><%= link_to "轉為管理者", to_admin_admin_user_path(user), method: :post, class: "btn btn-primary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
